{
  "name": "translate-bot",
  "version": "0.0.1",
  "description": "Google Translate on Telegram Bot",
  "main": "src/main.ts",
  "scripts": {
    "start": "node ./dist/main",
    "build": "rm -fr ./dist && tsc",
    "dev": "tsnd --respawn --clear ./src/main",
    "format": "prettier -cw ./src/**/*.ts",
    "lint": "xo --fix ./src/**/*.ts"
  },
  "keywords": [
    "translate",
    "google",
    "telegram",
    "bot",
    "telegraf"
  ],
  "author": "tfkhdyt",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4",
    "xo": "^0.48.0"
  },
  "dependencies": {
    "google-translate-api": "^2.3.0",
    "telegraf": "^4.8.1"
  }
}
